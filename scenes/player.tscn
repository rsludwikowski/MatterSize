script/source = "extends Label3D

@export var base_scale = Vector3.ONE
@export var scale_factor = 0.2

var camera
@onready var player: Player = get_parent()

func _ready():
	camera = get_viewport().get_camera_3d()
	if not camera:
		printerr(\"No camera found in the viewport!\")

func _process(delta):
	var player_velocity = player.current_velocity.length()
	set_text(\"%s\\nv: %.2f\\nOn Floor: %s\\nLocal gravity: %s\" % [
		player.name,
		player_velocity,
		player.in_hill_area,
		player.local_gravity.length()
		])
	
	if camera:
		# Oblicz odległość między kamerą a Label3D
		var z_distance = abs(global_transform.origin.z - camera.global_transform.origin.z)

		# Ustaw skalę w zależności od odległości
		var new_scale = base_scale * (z_distance * scale_factor)
		scale = new_scale
"

